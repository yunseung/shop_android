<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_layout"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/gs_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gs_logo"
        android:layout_centerVertical="true"
        android:contentDescription="홈으로 이동"
        android:visibility="gone"
        android:layout_marginLeft="24dp"
        />

    <LinearLayout
        android:id="@+id/layout_txt_navi_top"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_navi_top"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="#111111"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            />

        <ImageView
            android:id="@+id/top_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_navi_top_arrow"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/close"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/ic_navi_close"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:contentDescription="카테고리 메뉴 닫기"
        />


    <ImageView
        android:id="@+id/icon_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_search"
        android:layout_centerVertical="true"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@+id/close"
        android:paddingTop="1dp"
        android:contentDescription="검색"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/icon_setting"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/ic_navi_setting"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="56dp"
        android:contentDescription="설정 화면으로 이동하기"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f9f9f9"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
