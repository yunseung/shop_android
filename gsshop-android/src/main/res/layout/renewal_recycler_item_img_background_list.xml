<?xml version="1.0" encoding="utf-8"?><!-- 상품평 작성/수정 화면에서 하단 첨부이미지 리스트 영역 -->

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/renewal_background_img_list_item_height"
    android:gravity="left|center_vertical"
    >

    <LinearLayout
        android:id="@+id/layout_product"
        android:layout_width="@dimen/renewal_background_img_list_item_width"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/product_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/renewal_background_img_list_item_width"
            android:background="@drawable/no_img_550"
            />

        <gsshop.mobile.v2.support.ui.TwoLineTextView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="2"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:textColor="#111111"
            android:textSize="14dp"
            android:text="2줄 텍스트 상품명 2줄 텍스트 상품명"
            android:includeFontPadding="false"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:textColor="#111111"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="5,555,555"
                android:includeFontPadding="false"
                />

            <TextView
                android:id="@+id/price_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="#111111"
                android:paddingTop="0.5dp"
                android:textSize="13dp"
                android:text="원"
                android:includeFontPadding="false"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_read_more"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingLeft="10dp"
        >
        <ImageView
            android:id="@+id/img_read_more"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:background="@drawable/renewal_btn_more"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="더보기"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:includeFontPadding="false"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

</FrameLayout>