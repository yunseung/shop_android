<?xml version="1.0" encoding="UTF-8"?>
<!-- 인기검색어 롤링되는 영역 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="48dp"
    android:orientation="horizontal"
    android:background="@color/white"
    android:gravity="center_vertical"
    >

    <TextView
        android:id="@+id/txt_rank"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="left"
        android:includeFontPadding="false"
        android:text="1"
        android:textColor="#ee1f60"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_keyword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:ellipsize="none"
        android:singleLine="true"
        android:text="인기검색어"
        android:textColor="#000"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/lay_rank_state_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#ee1f60"
            android:textSize="10sp"
            android:text="@string/popular_keyword_new"
            android:includeFontPadding="false"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_rank_state_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:background="@drawable/bg_best_shop_popular_search_rank_up" />

        <TextView
            android:id="@+id/txt_rank_state_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#ee1f60"
            android:textSize="12sp"
            android:text="16"
            android:includeFontPadding="false"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_rank_state_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_rank_state"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:background="@drawable/bg_best_shop_popular_search_rank_down" />

        <TextView
            android:id="@+id/txt_rank_state_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#111"
            android:textSize="12sp"
            android:text="16"
            android:includeFontPadding="false"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_rank_state_same"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="1dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:background="#cccccc"/>

    </LinearLayout>

</LinearLayout>