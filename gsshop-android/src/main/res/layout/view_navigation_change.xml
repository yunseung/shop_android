<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >


    <View
        android:id="@+id/change_margin"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <RelativeLayout
        android:id="@+id/change_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/switch_android"
            android:layout_centerInParent="true"
            android:contentDescription="메뉴 위치 변경"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/left_navigation_line"
            android:layout_toLeftOf="@+id/change"
            android:layout_centerVertical="true"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/left_navigation_line"
            android:layout_toRightOf="@+id/change"
            android:layout_centerVertical="true"
            />
        <RelativeLayout
            android:id="@+id/change_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/switch_android_popup"
            android:layout_toRightOf="@+id/change"
            >
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>