<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_sns_dialog"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_width="35dp"
            android:layout_height="27dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_confirm_android" />

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/button_alert01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_join_button"
                android:gravity="center"
                android:textColor="#111111"
                android:textSize="16sp"
                android:typeface="sans" />

            <View
                android:layout_width="8dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/button_alert02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_login_button"
                android:gravity="center"
                android:textColor="#111111"
                android:textSize="16sp"
                android:typeface="sans" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#e5e5e5" />

        <Button
            android:id="@+id/button_close"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_sns_close_button"
            android:text="닫기"
            android:textColor="#666666"
            android:textSize="16sp"
            android:typeface="sans" />

    </LinearLayout>
</RelativeLayout>