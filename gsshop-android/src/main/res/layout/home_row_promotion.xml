<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="9dp"
    android:focusableInTouchMode="true"
    >

    <LinearLayout
        android:id="@+id/expand_control_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:background="@android:color/white"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/icon_promotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_tv_promotion"
            />
        <TextView
            android:id="@+id/program_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#111111"
            android:textSize="16sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/promotion_group"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@android:color/white"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/promotion_layout_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@android:color/white"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/promotion_item_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f7f7f7"
                />

        </LinearLayout>
        <View
            android:id="@+id/line_1"
            android:layout_width="11dp"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:id="@+id/promotion_layout_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/promotion_item_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f7f7f7"
                />
        </LinearLayout>


        <View
            android:id="@+id/line_2"
            android:layout_width="11dp"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:id="@+id/promotion_layout_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/promotion_item_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f7f7f7"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@android:color/white"/>

    <!-- 배너영역 -->
    <LinearLayout
        android:id="@+id/banner_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        />
</LinearLayout>