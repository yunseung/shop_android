<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/category_sub_group"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:id="@+id/category_sub_left_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="24dp"
            android:paddingRight="23dp"
            android:background="@drawable/bg_button_navi_category_sub"
            >

            <TextView
                android:id="@+id/category_sub_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="none"
                android:textSize="15dp"
                android:textColor="#111111"
                android:singleLine="true"
                />

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#f4f4f4"
            />

        <RelativeLayout
            android:id="@+id/category_sub_right_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_button_navi_category_sub"
            android:paddingLeft="24dp"
            android:paddingRight="23dp"
            >

            <TextView
                android:id="@+id/category_sub_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="none"
                android:textSize="15dp"
                android:textColor="#111111"
                android:singleLine="true"
                />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4"
        />
</LinearLayout>