<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_tab"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider_sel_today"
        />
<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/recycler_item"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        />-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="16dp"
        >
        <TextView
            android:id="@+id/txt_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쇼미더트렌드"
            android:textColor="#191923"
            android:textSize="16sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="none"
            />
        <TextView
            android:id="@+id/txt_sub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#a3191923"
            android:text="월요일 22:30"
            android:layout_marginLeft="12dp"
            android:textSize="12sp"
            android:singleLine="true"
            android:ellipsize="none"
            />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/view_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="더보기"
                android:textSize="14sp"
                android:textColor="#a3111111"
                />
            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/navigation_chevron_right"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/image_main"
        />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/view_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        />
    <View
        android:background="@color/color_divider_sel_today"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />
    <LinearLayout
        android:id="@+id/view_more_bottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_more_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="방송 예정상품"
            android:textColor="#a3111111"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 더보기"
            android:textColor="#a3111111"
            android:textSize="16sp"
            />
        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/navigation_chevron_right"
            />
    </LinearLayout>
    <View
        android:background="@color/color_divider_sel_today"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />
</LinearLayout>