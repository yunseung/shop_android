<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:typeface="sans"
            android:textSize="14dp"
            android:textColor="#cccccc"
            />

        <gsshop.mobile.v2.support.ui.CharacterWrapTextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:typeface="sans"
            android:textSize="14dp"
            android:textColor="#ffffff"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="4dp"
        android:paddingVertical="1dp"
        android:background="@drawable/bg_mobilelive_chatlist_msg">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="top"
            android:layout_marginTop="8dp"
            android:background="@drawable/combined_shape" />

        <TextView
            android:id="@+id/sender_r"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:paddingLeft="4dp"
            android:typeface="sans"
            android:textSize="14dp"
            android:textColor="#ffde00"
            android:textStyle="bold"
            android:text="PD"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <gsshop.mobile.v2.support.ui.CharacterWrapTextView
                android:id="@+id/message_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:typeface="sans"
                android:textSize="14dp"
                android:textColor="#FFFFFF"
                android:includeFontPadding="false"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>