<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_user_info"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        android:paddingLeft="21dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_grade_icon"
            android:layout_width="18dp"
            android:layout_height="18dp" />

        <TextView
            android:id="@+id/tv_grade_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="#9b1ccb"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textColor="#111111"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_grade_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="#111111"
            android:textSize="17dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_first_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_user_info"
        android:layout_marginHorizontal="16dp"
        android:background="#e5e5e5" />

    <LinearLayout
        android:id="@+id/ll_contents_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_first_separator"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/ll_sale_max_list"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="21dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone" />

            <TextView
                android:id="@+id/btn_show_price"
                android:layout_width="68dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="21dp"
                android:background="@drawable/btn_white_gray_border"
                android:paddingHorizontal="8dp"
                android:paddingTop="6dp"
                android:paddingBottom="4dp"
                android:text="가격보기"
                android:textColor="#111111"
                android:textSize="14dp"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_sale_max_list_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="21dp"
            android:orientation="vertical"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_add_sale_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="21dp"
            android:orientation="vertical"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_add_pmo_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="21dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_max_discount_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="21dp"
            android:background="#e5e5e5"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_juklib_max_list"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="21dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_juklib_max_list_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="21dp"
            android:orientation="vertical"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_more_info_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="21dp"
            android:background="#e5e5e5"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_more_info_area"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="21dp"
            android:visibility="gone"></LinearLayout>

        <LinearLayout
            android:id="@+id/ll_view_more_area"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#f7f7f7"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/sale_juklib_more"
                android:textColor="#444444"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/iv_more_icon"
                android:layout_width="14dp"
                android:layout_height="8dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/btn_more" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_tooltip"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_above="@id/ll_contents_layout"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="-14dp"
        android:background="@drawable/personalization_balloon"
        android:gravity="center|center_vertical"
        android:includeFontPadding="false"
        android:text="보유혜택으로 미리 계산했어요"
        android:textColor="@color/white"
        android:visibility="gone"
        android:textSize="12dp" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ll_user_info"
        android:layout_alignBottom="@id/ll_contents_layout"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/bg_rect_666666_radius4" />

</RelativeLayout>