<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="44dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="12dp"
        >

        <ImageView
            android:id="@+id/psts_tab_icon"
            android:layout_width="46dp"
            android:layout_height="12dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/psts_tab_title_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="11dp"
            android:textColor="#937f2f"
            android:maxLines="1"
            android:text="서브"
            android:visibility="invisible"
            android:includeFontPadding="false"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/psts_tab_title_sub" >

            <ImageView
                android:id="@+id/psts_tab_more"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/ic_tab_more" />

            <TextView
                android:id="@+id/psts_tab_title"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:textSize="17dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#111111"
                android:maxLines="1"
                android:text="메인타이틀"
                android:includeFontPadding="false" />


        </LinearLayout>>

    </RelativeLayout>

    <View
        android:id="@+id/psts_view_last"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>