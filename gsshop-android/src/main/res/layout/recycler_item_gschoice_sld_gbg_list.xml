<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="9.6dp"
    android:layout_marginRight="9.6dp"
    android:orientation="horizontal"
    android:paddingBottom="16dp">

    <RelativeLayout
        android:id="@+id/rl_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_product"
                android:layout_width="124.8dp"
                android:layout_height="130dp"
                android:layout_gravity="center" />

            <gsshop.mobile.v2.support.ui.TwoLineTextView
                android:id="@+id/txt_product_name"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="9dp"
                android:ellipsize="none"
                android:gravity="left"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:text="테스트테스트테스트테스트테스트테스트테스트"
                android:textColor="#444444"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:includeFontPadding="false"
                    android:text="1,000"
                    android:textColor="#111111"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_price_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingTop="0.5dp"
                    android:text="원"
                    android:textColor="#111111"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_text_badge"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_marginTop="@dimen/gschoice_banner_text_term"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_text_badge_1"
                    style="@style/GSChoiceStatText"
                    android:text="무료배송" />

                <ImageView
                    android:id="@+id/iv_separator"
                    android:layout_width="3dp"
                    android:layout_height="3dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/dot_grey" />

                <TextView
                    android:id="@+id/tv_text_badge_2"
                    style="@style/GSChoiceStatText"
                    android:text="무이자" />
            </LinearLayout>

        </LinearLayout>

        <!-- 좌측 상단 뱃지-->
        <ImageView
            android:id="@+id/iv_top_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_more_btn"
        android:layout_width="124.8dp"
        android:layout_height="130dp"
        android:layout_marginLeft="9.6dp"
        android:gravity="center"
        android:orientation="vertical"
        android:duplicateParentState="true"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="64dp"
            android:duplicateParentState="true"
            android:layout_height="64dp"
            android:background="@drawable/btn_more_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="상품 더보기"
            android:textColor="#666666"
            android:textSize="15dp" />

    </LinearLayout>


</LinearLayout>