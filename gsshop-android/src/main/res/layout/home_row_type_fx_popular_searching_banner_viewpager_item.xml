<?xml version="1.0" encoding="UTF-8"?>
<!-- 인기검색어 뷰페이저내에 아이템-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/txt_vp_rank"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="1"
            android:textColor="#ee1f60"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_vp_keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:ellipsize="none"
            android:singleLine="true"
            android:text="인기검색어"
            android:textColor="#111"
            android:textSize="18dp" />

        <LinearLayout
            android:id="@+id/lay_rank_state_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="@string/popular_keyword_new"
                android:textColor="#ee1f60"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_rank_state_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="8dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="4dp"
                android:background="@drawable/bg_best_shop_popular_search_rank_up" />

            <TextView
                android:id="@+id/txt_rank_state_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="none"
                android:gravity="right"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="16"
                android:textColor="#ee1f60"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_rank_state_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left">

            <ImageView
                android:id="@+id/img_rank_state"
                android:layout_width="10dp"
                android:layout_height="8dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="4dp"
                android:background="@drawable/bg_best_shop_popular_search_rank_down" />

            <TextView
                android:id="@+id/txt_rank_state_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="none"
                android:gravity="right"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="16"
                android:textColor="#111"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_rank_state_same"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:background="#cccccc" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/txt_vp_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentBottom="true"
        android:background="#f4f4f4" />

</RelativeLayout>