<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="83dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/noimg_list" />

    <ImageView
        android:id="@+id/img_tv_schedule_time_onair_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/timeline_on_dim_an" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="6dp">

        <TextView
            android:id="@+id/txt_tv_schedule_time_onair_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:typeface="sans" />

        <gsshop.mobile.v2.home.shop.tvshoping.TvLiveTimeLayout
            android:id="@+id/tv_live_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_tv_schedule_time_onair_title"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_remain_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:typeface="sans" />

        </gsshop.mobile.v2.home.shop.tvshoping.TvLiveTimeLayout>

        <ImageView
            android:id="@+id/img_tv_shedule_time_onair_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_tv_schedule_time_onair_title"
            android:contentDescription="@string/accessibility_tv_schedule_on_air"
            android:layout_marginBottom="5dp"
            android:src="@drawable/on_air_an" />
    </RelativeLayout>

    <View
        android:id="@+id/view_tv_schedule_time_onair_selection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_tv_schedule_time_selection" />
</RelativeLayout>