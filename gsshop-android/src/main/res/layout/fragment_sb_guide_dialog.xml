<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:padding="20dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/guide_sb_content" />

    <LinearLayout
        android:id="@+id/btnStart"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="65dp"
        android:orientation="horizontal"
        android:background="@drawable/guide_sb_btn"
        android:layout_gravity="bottom"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/guide_sb_bottom" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="1px"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_sb_bottom"
        android:gravity="center">

        <Button
            android:id="@+id/btnDontShow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/selector_share_item"
            android:textColor="#999999"
            android:textSize="14sp"
            android:text="@string/common_close_nomore"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#e5e5e5" />

        <Button
            android:id="@+id/btnClose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/selector_share_item"
            android:textColor="#111111"
            android:textSize="15sp"
            android:text="@string/common_close"/>

    </LinearLayout>

</FrameLayout>