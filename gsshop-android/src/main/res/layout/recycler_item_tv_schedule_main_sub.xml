<?xml version="1.0" encoding="UTF-8"?><!-- 생방송 서브상품 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/view_prd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="12dp">

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp">

            <ImageView
                android:id="@+id/image_prd"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_tv_schedule_main_sub_thumb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_comment"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:background="#66111111"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="13dp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/text_brd_time"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:background="#e6ffffff"
                    android:gravity="center"
                    android:textColor="#111111"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:visibility="gone"
                    android:typeface="sans" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_content"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:includeFontPadding="false"
                android:lines="2"
                android:textColor="#444444"
                android:textSize="14dp"
                android:typeface="sans" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_title"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#111111"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/text_won"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#111111"
                    android:textSize="14dp"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lay_alarm"
                    android:layout_width="32dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bt_alarm2_an"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <View
                            android:id="@+id/alarm_off"
                            android:layout_width="32dp"
                            android:layout_height="30dp"
                            android:contentDescription="방송알림 꺼짐"
                            android:background="@drawable/bt_alarm2_ic_an" />

                        <View
                            android:id="@+id/alarm_on"
                            android:layout_width="32dp"
                            android:layout_height="30dp"
                            android:contentDescription="방송알림 켜짐"
                            android:background="@drawable/bt_alarm2_ic_on_an"
                            android:visibility="gone" />
                    </FrameLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_pay"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/bt_buy2_an"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:typeface="sans"
                    android:textSize="14dp" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>