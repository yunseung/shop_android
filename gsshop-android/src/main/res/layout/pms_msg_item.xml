<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pms_lay_msg_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:background="#ebebeb"
	android:paddingBottom="@dimen/list_divider_height"
    android:baselineAligned="false"
    android:orientation="vertical" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#ffffff"
		android:orientation="vertical" >

		<LinearLayout
			android:id="@+id/layout_pms"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="10dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:layout_marginTop="19dp"
			android:orientation="vertical" >

			<TextView
				android:id="@+id/pms_txt_map1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ellipsize="none"
				android:singleLine="true"
				android:text=""
				android:textColor="#b6cf00"
				android:textSize="12dp"
				android:typeface="sans" />

			<TextView
				android:id="@+id/pms_txt_map2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="9dp"
				android:ellipsize="none"
				android:lines="2"
				android:maxLines="2"
				android:text=""
				android:textColor="@color/pms_text_active_msg_color"
				android:textSize="16dp"
				android:typeface="sans" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal" >

				<TextView
					android:id="@+id/pms_txt_reg_date"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:layout_marginBottom="9dp"
					android:layout_marginTop="9dp"
					android:singleLine="true"
					android:text="@string/app_name"
					android:textColor="@color/pms_text_common_color"
					android:textSize="12dp"
					android:typeface="sans" />

			</LinearLayout>

			<FrameLayout
				android:id="@+id/pms_img_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="6dp" >

				<ImageView
					android:id="@+id/pms_img"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:adjustViewBounds="true"
					android:background="@drawable/pms_msg_item_image_border"
					android:padding="@dimen/bg_border_line_width"
					android:scaleType="fitXY"
					android:src="@drawable/noimg_tv" />

			</FrameLayout>
		</LinearLayout>

		<include
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			layout="@layout/home_row_bottom_shadow" />

	</LinearLayout>

</LinearLayout>