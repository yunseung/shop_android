<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="222dp"
    android:layout_height="349dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:id="@+id/view_time"
            android:layout_width="220dp"
            android:layout_height="266dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/view_time_text"
                android:layout_width="220dp"
                android:layout_height="46dp"
                android:background="#dea35e"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textColor="#ffffff"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="5dp"
                    android:layout_height="1dp" />

                <TextView
                    android:id="@+id/tv_small_text"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:gravity="bottom"
                    android:includeFontPadding="false"
                    android:text="남음"
                    android:textColor="#ffffff"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:scaleType="centerCrop" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="두 줄 짜리 상품평. 한 줄 일때도 가운데 정렬"
            android:textColor="#111111"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="72,000"
                android:textColor="#111111"
                android:textSize="19dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_price_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="원"
                android:textColor="#111111"
                android:textSize="14dp" />

            <View
                android:layout_width="3dp"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/tv_discount_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="4"
                android:textColor="#ee1f60"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_discount_rate_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="%"
                android:textColor="#ee1f60"
                android:textSize="13dp"
                android:textStyle="bold" />


            <View
                android:layout_width="3dp"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/tv_base_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="79,900원"
                android:textColor="#7a111111"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>