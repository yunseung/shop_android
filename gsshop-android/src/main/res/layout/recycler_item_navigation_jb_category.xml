<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="98dp"
    android:background="#f4f4f4"
    android:orientation="horizontal"
    >
    <View
        android:id="@+id/view_left_margin"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="88dp"
        android:layout_height="98dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <gsshop.mobile.v2.menu.navigation.Views.ImageViewReduceWhenSelected
                android:id="@+id/image_jb_category_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                />

            <TextView
                android:id="@+id/text_jb_category_item_new"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/bg_ee1f60_radius25"
                android:textSize="10dp"
                android:text="N"
                android:textColor="@color/white"
                android:layout_gravity="right|bottom"
                android:gravity="center"
                android:visibility="gone"
                />

        </FrameLayout>

        <TextView
            android:id="@+id/text_jb_category_item"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:maxLines="1"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            android:typeface="sans"
            android:textColor="#111111"
            android:ellipsize="end"
            android:textSize="13dp" />
    </LinearLayout>
</LinearLayout>

