<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="550dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="203dp"
            android:layout_height="20dp"
            android:background="@color/skeleton_view_background" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <View
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:background="@color/skeleton_view_background" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/skeleton_view_background" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="6dp"
            android:background="@color/skeleton_view_background" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:background="@color/skeleton_view_background" />

        <View
            android:layout_width="168dp"
            android:layout_height="12dp"
            android:layout_marginTop="6dp"
            android:background="@color/skeleton_view_background" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">

        <View
            android:id="@+id/view_1"
            android:layout_width="159dp"
            android:layout_height="28dp"
            android:layout_marginTop="3dp"
            android:background="@color/skeleton_view_background" />

        <View
            android:layout_width="69dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:background="@color/skeleton_view_background" />

        <View
            android:layout_width="159dp"
            android:layout_height="16dp"
            android:layout_below="@id/view_1"
            android:layout_marginTop="6dp"
            android:background="@color/skeleton_view_background" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="28dp">

        <View
            android:layout_width="236dp"
            android:layout_height="16dp"
            android:background="@color/skeleton_view_background" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="76dp">

        <View
            android:id="@+id/view_circle_1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/skeleton_view_circle_shape" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/view_circle_1"
            android:orientation="vertical">

            <View
                android:layout_width="213dp"
                android:layout_height="12dp"
                android:background="@color/skeleton_view_background" />

            <View
                android:layout_width="213dp"
                android:layout_height="12dp"
                android:layout_marginTop="6dp"
                android:background="@color/skeleton_view_background" />

            <View
                android:layout_width="213dp"
                android:layout_height="12dp"
                android:layout_marginTop="6dp"
                android:background="@color/skeleton_view_background" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/skeleton_view_background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:paddingTop="22dp">

        <View
            android:id="@+id/view_circle_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/skeleton_view_circle_shape" />

        <LinearLayout
            android:id="@+id/aa"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/view_circle_2"
            android:orientation="vertical">

            <View
                android:layout_width="164dp"
                android:layout_height="12dp"
                android:background="@color/skeleton_view_background" />

            <View
                android:layout_width="204dp"
                android:layout_height="12dp"
                android:layout_marginTop="6dp"
                android:background="@color/skeleton_view_background" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/skeleton_view_circle_shape" />

        <View
            android:layout_width="164dp"
            android:layout_height="12dp"
            android:layout_marginLeft="7dp"
            android:background="@color/skeleton_view_background" />
    </LinearLayout>

</LinearLayout>