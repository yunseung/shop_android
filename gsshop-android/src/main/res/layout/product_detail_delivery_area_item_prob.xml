<?xml version="1.0" encoding="utf-8"?>
<!-- 단품하단 배송 영역 아이템 내 도착확률 정보 영역 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_prob_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="152dp"
        android:maxWidth="182dp"
        android:maxLines="1"
        android:text="12/3(토)까지 도착 확률"
        android:textColor="#111111"
        android:textSize="14dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:background="@drawable/dashline_c9c9c9_4_1"/>

    <TextView
        android:id="@+id/tv_prob_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:minWidth="38dp"
        android:maxLines="1"
        android:text="198%"
        android:textColor="#111111"
        android:textSize="14dp" />

</LinearLayout>