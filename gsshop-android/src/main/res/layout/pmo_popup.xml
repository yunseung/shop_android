<?xml version="1.0" encoding="utf-8"?>
<!-- 매장팝업 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/promotion_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:layout_gravity="center"
	android:orientation="vertical" >

    <!-- 상단 이미지 영역 -->
    <ImageView
		android:id="@+id/promotion_img"
		android:layout_width="match_parent"
		android:layout_height="255dp"
		android:scaleType="fitXY"/>

    <!-- 하단 버튼 영역 -->
	<LinearLayout
		android:id="@+id/promotion_bottom"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:background="@drawable/bg_sb_bottom">

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="#e5e5e5" />

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<Button
				android:id="@+id/promotion_end"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:background="@drawable/selector_share_item"
				android:textColor="#999999"
				android:textSize="15sp"
				android:text="@string/common_close_noagain"/>

			<View
				android:layout_width="1dp"
				android:layout_height="match_parent"
				android:background="#e5e5e5" />

			<Button
				android:id="@+id/promotion_close"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:background="@drawable/selector_share_item"
				android:textColor="#111111"
				android:textSize="15sp"
				android:text="@string/common_close"/>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>