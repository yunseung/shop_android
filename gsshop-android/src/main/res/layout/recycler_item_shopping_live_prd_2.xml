<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_root"
    android:layout_marginBottom="20dp"
    android:layout_marginRight="7dp"
    android:layout_marginLeft="7dp"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_img"
        android:layout_width="match_parent"
        android:layout_height="236dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        android:layout_marginTop="16dp"
        >
        <ImageView
            android:id="@+id/img_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_gradient_transparent_to_80000000"
            />
        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ml_play_circle_line_overlay"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>

    <gsshop.mobile.v2.home.shop.renewal.views.TwoLineTextViewSetEllipsizePossibly
        android:id="@+id/txt_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#0d0d0d"
        android:lines="2"
        android:ellipsize="end"
        android:layout_marginTop="12dp"
        android:includeFontPadding="false"
        android:text="지에스 최초 누적 10만후기 리뷰 달성 사은품"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_marginTop="11dp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/icon_ml_play"
            />
        <TextView
            android:id="@+id/txt_view_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#0b0b0b"
            android:layout_marginLeft="2dp"
            android:text="1,303명 시청"
            />
    </LinearLayout>
    
</LinearLayout>