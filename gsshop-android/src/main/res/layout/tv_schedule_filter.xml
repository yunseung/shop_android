<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <View
        android:id="@+id/left_empty_view"
        android:layout_width="7dp"
        android:layout_height="1dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/lay_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="14dp"
        android:paddingLeft="14dp"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/bg_tv_schedule_filter_unselected"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_filter_checked"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/tv_schedule_filter_check"
            android:layout_marginRight="4dp"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/tv_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#111111" />

    </LinearLayout>

    <View
        android:id="@+id/right_empty_view"
        android:layout_width="7dp"
        android:layout_height="1dp"
        android:visibility="gone"/>

</LinearLayout>