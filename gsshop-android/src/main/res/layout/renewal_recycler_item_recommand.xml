<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="144dp"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/product_img"
                android:layout_width="144dp"
                android:layout_height="144dp" />

            <ImageView
                android:layout_width="144dp"
                android:layout_height="144dp"
                android:background="@drawable/bg_gray_rect"/>

            <gsshop.mobile.v2.support.ui.TwoLineTextView
                android:id="@+id/text_dimd"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="상품\n더보기"
                android:textSize="16sp"
                android:typeface="sans"
                android:background="#6f000000"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/ad_img"
                android:layout_width="28dp"
                android:layout_height="16dp"
                android:src="@drawable/ad_img"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="7dp"
                android:visibility="gone"/>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/layout_product_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp">

            <gsshop.mobile.v2.home.shop.renewal.views.TwoLineTextViewSetEllipsizePossibly
                android:id="@+id/info_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="2"
                android:lines="2"
                android:paddingRight="5dp"
                android:textColor="#111111"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="#111111"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:text="5,555,555"
                    />

                <TextView
                    android:id="@+id/price_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="#111111"
                    android:paddingTop="0.5dp"
                    android:textSize="14sp"
                    android:text="원"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>