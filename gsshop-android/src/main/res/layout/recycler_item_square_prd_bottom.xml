<?xml version="1.0" encoding="utf-8"?>
<!-- 정사각 상품 배너 하단 상품명 및 가격 영역 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp" >

    <!-- 상품명 -->
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:ellipsize="none"
        android:typeface="sans"
        android:textStyle="bold"
        android:textSize="22dp"

        android:textColor="#111" />

    <!-- 상품설명 -->
    <TextView
        android:id="@+id/txt_title_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gschoice_banner_category_text_term"
        android:singleLine="true"
        android:ellipsize="none"
        android:typeface="sans"
        android:textSize="16dp"
        android:textColor="#444" />

    <!-- 가격영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/gschoice_banner_category_text_term"
        >

        <TextView
            android:id="@+id/txt_badge_per"
            android:layout_marginTop="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textSize="19dp"
            android:typeface="sans"
            android:textColor="#ed1f60"/>

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="23"
            android:typeface="sans"
            android:textSize="19dp"
            android:textStyle="bold"
            android:textColor="#111"
            />

        <TextView
            android:id="@+id/txt_price_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="sans"
            android:textSize="15dp"
            android:textColor="#111"
            android:layout_marginTop="1dp" />

        <TextView
            android:id="@+id/txt_base_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="0dip"
            android:layout_marginLeft="6dp"
            android:typeface="sans"
            android:textSize="13dp"
            android:textColor="#999"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/txt_base_price_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="sans"
            android:textColor="#999"
            android:lineSpacingExtra="0dip"
            android:textSize="13dp"
            android:visibility="gone"
            android:layout_marginTop="0.3dp"
            />

        <TextView
            android:id="@+id/valueInfo"
            style="@style/DealValueInfoText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:lineSpacingExtra="0dip"
            android:layout_marginLeft="7dp"
            android:gravity="bottom"
            android:paddingBottom="2dp" />

    </LinearLayout>

    <!-- 뱃지영역, 구매수량 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        >

        <!-- 뱃지영역 -->
        <LinearLayout
            android:id="@+id/lay_badge_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            />

        <!-- 구매수량 -->
        <TextView
            android:id="@+id/txt_sales_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:typeface="sans"
            android:textSize="13dp"
            android:textColor="#888" />

    </RelativeLayout>

</LinearLayout>