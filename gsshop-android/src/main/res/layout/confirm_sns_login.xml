<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_sns_dialog"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="25dp">

        <TextView
            android:id="@+id/text_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#111111"
            android:textSize="16sp"
            android:typeface="sans" />


        <LinearLayout
            android:id="@+id/button_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:background="@drawable/bg_join_button"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="19dp"
                android:layout_height="18dp"
                android:background="@drawable/ic_call_android" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="문의 1899-4500"
                android:textColor="#111111"
                android:textSize="16sp"
                android:typeface="sans" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5" />

        <Button
            android:id="@+id/button_close"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_sns_close_button"
            android:text="닫기"
            android:textColor="#666666"
            android:textSize="16sp"
            android:typeface="sans" />

    </LinearLayout>
</RelativeLayout>