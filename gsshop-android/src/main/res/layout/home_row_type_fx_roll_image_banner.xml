<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/list_divider_height"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/flexible_item_border"
        android:paddingBottom="1dp" >

        <gsshop.mobile.v2.library.viewpager.InfiniteViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/flexible_rollimage_item_image_height" />

        <gsshop.mobile.v2.home.util.IconTabBar
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="7.87dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="11.25dp" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/number_indicator"
        android:layout_width="match_parent"
        android:layout_height="33.75dp"
        android:background="#eaeaea"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#111111"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/text_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/0"
            android:textColor="#999999"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>