<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="36dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/txt_best_now_description"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:textSize="14dp"
            android:textColor="#a3111111"
            android:layout_toLeftOf="@+id/layout_checkbox"
            android:text="@string/best_now_description"
            android:includeFontPadding="false"
            />

        <RelativeLayout
            android:id="@+id/layout_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            >
            <CheckBox
                android:id="@+id/check_view_all"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:button="@drawable/checkbox"
                android:layout_marginRight="6dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/txt_best_now_view_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/check_view_all"
                android:textSize="14dp"
                android:textColor="#111111"
                android:text="@string/best_now_view_all"
                android:includeFontPadding="false"
                />

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>


