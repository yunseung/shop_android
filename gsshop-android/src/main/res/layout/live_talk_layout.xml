<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/live_talk"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="11.25dp"
    android:paddingBottom="1.68dp"
    android:paddingLeft="11.25dp"
    android:paddingRight="11.25dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="51.75dp"
        android:paddingLeft="11.25dp"
        android:paddingRight="11.25dp"
        android:background="@drawable/bg_livetalk"
        android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/live_logo"
            android:layout_width="83.25dp"
            android:layout_height="21.37dp"
            android:layout_marginRight="4.5dp"
            android:background="@drawable/logo_livetalk"
            android:layout_centerVertical="true"
            android:layout_marginBottom="12dp"
            android:scaleType="fitXY" />

        <TextSwitcher
            android:id="@+id/switcher"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginRight="11.25dp"
            android:layout_toRightOf="@+id/live_logo"
            android:layout_toLeftOf="@+id/totalCnt"
            android:layout_centerVertical="true"
            android:gravity="center" />

        <TextView
            android:id="@+id/totalCnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="20.25dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/square"
            android:gravity="center"
            android:textColor="#9CC822"
            android:typeface="sans"
            android:maxLines="1"
            android:text="0"
            android:ellipsize="none"
            android:layout_centerVertical="true"
            android:textSize="12sp" />

    </RelativeLayout>
</RelativeLayout>
</LinearLayout>