<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_sns_dialog"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="@string/alarm_register_complete"
            android:textColor="#444444"
            android:textSize="14sp"
            android:typeface="sans" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f4f4f4" />

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="35dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:background="#f4f4f4"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="휴대폰번호 :"
                android:textColor="#999999"
                android:textSize="15sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/txt_tv_schedule_broad_alarm_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#86cf00"
                android:textSize="16sp"
                android:typeface="sans" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/tv_schedule_alarm_dialog_info"
            android:textColor="#444444"
            android:textSize="13sp"
            android:typeface="sans" />

        <LinearLayout
            android:id="@+id/bg_tv_schedule_broad_alarm_my"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@drawable/bg_tv_schedule_broad_alarm_boarder"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_tv_schedule_broad_alarm_my_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#444444"
                android:textSize="13sp"
                android:text="나의 방송알림 보기"
                android:typeface="sans" />

            <View
                android:layout_width="5dp"
                android:layout_height="8dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/popup_ar_an" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5" />

        <Button
            android:id="@+id/btn_tv_schedule_broad_alarm_close"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@android:color/transparent"
            android:text="@string/mc_close"
            android:textColor="#111111"
            android:textSize="15sp"
            android:typeface="sans" />
    </LinearLayout>
</RelativeLayout>