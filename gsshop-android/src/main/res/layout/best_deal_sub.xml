<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_brand_name"
            style="@style/DealTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="3dp"
            android:text="브렌드명"
            android:textColor="#111111"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LAP 라운드넥 이중 맨투맨 티셔츠 AKEWT108"
            android:textColor="#111111"
            android:textSize="15sp"
            android:ellipsize="end"
            android:maxLines="1"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/badge_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="6dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_rental_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#111111"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginRight="2dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_price"
                style="@style/DealPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="23"
                android:text="1,000,000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_price_unit"
                style="@style/DealPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="원"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txt_discount_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:singleLine="true"
                android:text="8%"
                android:textColor="#ec2261"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_base_price"
                style="@style/DealPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:lineSpacingExtra="0dip"
                android:text="1,200,000"
                android:singleLine="true"
                android:textColor="#888888"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_base_price_unit"
                style="@style/DealPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.3dp"
                android:lineSpacingExtra="0dip"
                android:text="원"
                android:textColor="#888888"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-16dp"
        layout="@layout/best_deal_sub_benefit" />


</LinearLayout>