<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/view_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="11.25dp"
        android:paddingRight="5dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_prd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sale_720"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:ellipsize="none"
            android:textColor="#111111"
            android:textSize="15sp"
            android:maxLines="1"
            android:layout_marginBottom="11.25dp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/text_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:ellipsize="none"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="14sp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:ellipsize="none"
            android:singleLine="true"
            android:textColor="#444444"
            android:textSize="14sp"
            android:typeface="sans" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="11.25dp"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/txt_badge_per"
                style="@style/DealDiscountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="GS가" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >
                <LinearLayout
                    android:id="@+id/txt_base_price_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/txt_base_price"
                        style="@style/DealPriceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#888888"
                        android:textSize="11.5dp"
                        android:textStyle="bold"
                        android:padding="0dp"
                        android:includeFontPadding="false"
                        android:layout_marginLeft="1dp"
                        />
                    <TextView
                        android:id="@+id/txt_base_price_unit"
                        style="@style/DealPriceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#888888"
                        android:textSize="11.5dp"
                        android:textStyle="bold"
                        android:includeFontPadding="false"
                        />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/txt_value_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/txt_value_text"
                        style="@style/DealPriceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#111111"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:textSize="11.5dp"
                        android:includeFontPadding="false"
                        android:layout_marginTop="-2dp"
                        />
                    </LinearLayout>

                <LinearLayout
                    android:id="@+id/txt_price_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/txt_price"
                        style="@style/DealPriceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="23"
                        android:textStyle="bold"
                        android:text="0"
                        android:includeFontPadding="false"
                        android:layout_marginTop="-2dp"
                        android:layout_marginBottom="-2dp"
                        />

                    <TextView
                        android:id="@+id/txt_price_unit"
                        style="@style/DealPriceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:text="원"
                        android:textStyle="normal"
                        android:includeFontPadding="false"
                        android:layout_marginTop="-2dp"
                        android:layout_marginBottom="-2dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/txt_value_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/txt_value_info"
                        style="@style/DealPriceText"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:textColor="#888888"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:ellipsize="none"
                        android:textSize="11.5dp"
                        android:includeFontPadding="false"
                        android:layout_marginTop="-1dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>