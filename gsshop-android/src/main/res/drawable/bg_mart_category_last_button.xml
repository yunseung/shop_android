<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:topRightRadius="4dp" android:bottomRightRadius="4dp" />
            <stroke android:width="0.5dp" android:color="@color/background_shop" />
            <solid android:color="@color/mart_deal_btn_selected" />
        </shape>
    </item> <!-- default -->

    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <corners android:topRightRadius="4dp" android:bottomRightRadius="4dp" />
            <stroke android:width="0.5dp" android:color="@color/background_shop" />
            <solid android:color="@color/mart_deal_btn_default" />
        </shape>
    </item>
</selector>
