<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding
                android:bottom="0.2dp"
                android:left="0.2dp"
                android:right="0.2dp"
                android:top="0.2dp" />

            <solid android:color="#ffe6e6e8" />

            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="0.3dp"
                android:left="0.3dp"
                android:right="0.3dp"
                android:top="0.3dp" />

            <solid android:color="#15D6D6D6" />

            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="0.5dp"
                android:left="0.5dp"
                android:right="0.5dp"
                android:top="0.5dp" />

            <solid android:color="#30D7D7D7" />

            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="#60D8D8D8" />

            <corners android:radius="4dp" />
        </shape>
    </item>


    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@android:color/white" />

            <corners android:radius="4dp" />
        </shape>
    </item>

</layer-list>