<?xml version="1.0" encoding="utf-8"?>
<!-- 버튼 배경 7 : 버튼 누르면 버튼 색상만 변경 -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_default_background" />
            <stroke android:width="1px" android:color="@color/button_default_stroke" />
            <corners android:radius="10px" />
        </shape>
	</item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_default_background" />
            <stroke android:width="1px" android:color="@color/button_logout_stroke" />
            <corners android:radius="10px" />
        </shape>
	</item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:centerColor="#858585" android:endColor="#858585" android:startColor="#858585" />
            <stroke android:width="2px" android:color="#717171" />
            <corners android:radius="10px" />
        </shape>
	</item>

</selector>